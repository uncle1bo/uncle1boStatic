  <!-- Bootstrap CSS和Icons通过依赖资源管理器动态加载 -->
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    .color-picker-container {
      position: relative;
      display: inline-block;
    }
    
    .color-preview {
      width: 40px;
      height: 40px;
      border: 2px solid #dee2e6;
      border-radius: 8px;
      cursor: pointer;
      display: inline-block;
      margin-right: 10px;
      transition: all 0.3s ease;
    }
    
    .color-preview:hover {
      transform: scale(1.1);
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    
    .color-input {
      position: absolute;
      opacity: 0;
      width: 0;
      height: 0;
    }
    
    .theme-preview {
      border: 2px solid #dee2e6;
      border-radius: 10px;
      padding: 20px;
      margin: 20px 0;
      transition: all 0.3s ease;
    }
    
    .theme-mode-selector {
      background: linear-gradient(135deg, #4a6bff 0%, #2541b8 100%);
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 30px;
    }
    
    .mode-btn {
      border: 2px solid rgba(255,255,255,0.3);
      background: rgba(255,255,255,0.1);
      color: white;
      border-radius: 8px;
      padding: 10px 20px;
      margin: 0 10px;
      transition: all 0.3s ease;
    }
    
    .mode-btn.active {
      background: white;
      color: #4a6bff;
      border-color: white;
    }
    
    .color-group {
      background: #f8f9fa;
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 20px;
    }
    
    .save-actions {
      position: sticky;
      bottom: 20px;
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 -4px 20px rgba(0,0,0,0.1);
      margin-top: 30px;
    }
  </style>
</head>
