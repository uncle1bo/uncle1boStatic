        alertDiv.innerHTML = `
          <i class="bi bi-exclamation-triangle-fill me-2"></i>
          主题管理器脚本加载失败，请刷新页面重试
        `;
        document.querySelector('.container').prepend(alertDiv);
      };
      document.head.appendChild(script);
    }).catch(error => {
      console.error('依赖资源加载失败:', error);
