{
  "website": {
    "name": "Uncle1bo Static Website",
    "version": "1.0.0",
    "description": "一个现代化的静态网站框架，支持多种文件格式的在线预览",
    "author": {
      "name": "Uncle1bo",
      "email": "uncle1bo@example.com",
      "website": "https://github.com/uncle1bo"
    },
    "features": {
      "filePreview": {
        "enabled": true,
        "supportedFormats": [
          "xml",
          "md",
          "json",
          "txt",
          "css",
          "js",
          "html",
          "jpg",
          "jpeg",
          "png",
          "gif",
          "webp",
          "svg"
        ],
        "libraries": {
          "prism": {
            "version": "1.29.0",
            "purpose": "代码语法高亮",
            "cdn": "https://cdn.jsdelivr.net/npm/prismjs@1.29.0/"
          },
          "marked": {
            "version": "9.1.6",
            "purpose": "Markdown渲染",
            "cdn": "https://cdn.jsdelivr.net/npm/marked@9.1.6/"
          },
          "katex": {
            "version": "0.16.8",
            "purpose": "数学公式渲染",
            "cdn": "https://cdn.jsdelivr.net/npm/katex@0.16.8/"
          },
          "mermaid": {
            "version": "10.6.1",
            "purpose": "图表和思维导图",
            "cdn": "https://cdn.jsdelivr.net/npm/mermaid@10.6.1/"
          }
        }
      },
      "responsive": {
        "enabled": true,
        "breakpoints": {
          "xs": "0px",
          "sm": "576px",
          "md": "768px",
          "lg": "992px",
          "xl": "1200px",
          "xxl": "1400px"
        }
      },
      "i18n": {
        "enabled": true,
        "defaultLanguage": "zh-CN",
        "supportedLanguages": [
          "zh-CN",
          "en"
        ],
        "fallbackLanguage": "zh-CN"
      },
      "seo": {
        "enabled": true,
        "sitemap": "/sitemap.xml",
        "robots": "/robots.txt",
        "metaTags": {
          "viewport": "width=device-width, initial-scale=1.0",
          "charset": "UTF-8"
        }
      }
    },
    "pages": [
      {
        "id": "home",
        "title": "首页",
        "url": "/index.html",
        "description": "网站主页",
        "keywords": ["静态网站", "响应式", "现代化"]
      },
      {
        "id": "about",
        "title": "关于我们",
        "url": "/pages/about.html",
        "description": "关于我们的信息",
        "keywords": ["关于", "团队", "介绍"]
      },
      {
        "id": "contact",
        "title": "联系我们",
        "url": "/pages/contact.html",
        "description": "联系方式和表单",
        "keywords": ["联系", "表单", "反馈"]
      },
      {
        "id": "services",
        "title": "服务",
        "url": "/pages/services.html",
        "description": "我们提供的服务",
        "keywords": ["服务", "产品", "解决方案"]
      }
    ],
    "deployment": {
      "platform": "Cloudflare Pages",
      "buildCommand": null,
      "outputDirectory": "prod",
      "environmentVariables": {},
      "customDomain": null,
      "ssl": {
        "enabled": true,
        "type": "flexible"
      },
      "caching": {
        "enabled": true,
        "ttl": 86400
      }
    },
    "performance": {
      "optimization": {
        "minification": false,
        "compression": true,
        "lazyLoading": true,
        "caching": true
      },
      "metrics": {
        "lighthouse": {
          "performance": 95,
          "accessibility": 98,
          "bestPractices": 92,
          "seo": 100
        }
      }
    },
    "security": {
      "headers": {
        "xFrameOptions": "DENY",
        "xContentTypeOptions": "nosniff",
        "xXssProtection": "1; mode=block",
        "referrerPolicy": "strict-origin-when-cross-origin",
        "contentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; img-src 'self' data: https:; font-src 'self' https://cdn.jsdelivr.net;"
      },
      "https": {
        "enforced": true,
        "hsts": {
          "enabled": true,
          "maxAge": 31536000,
          "includeSubDomains": true
        }
      }
    }
  }
}