<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>重定向管理器 - Uncle1bo静态站点工具集</title>
    <script>
        // 依赖资源管理器会自动初始化，无需手动创建实例
        
        // 创建全局Promise用于依赖资源加载
    window.dependencyResourcesReady = Promise.all([
            window.dependencyManager.loadResource('bootstrap-css'),
window.dependencyManager.loadResource('bootstrap-icons')
        ]).then(() => {
            return Promise.all([
                window.dependencyManager.loadResource('bootstrap-js'),
window.dependencyManager.loadResource('jquery')
            ]);
        }).catch(error => {
            console.warn('依赖资源加载失败，使用备选方案:', error);
        });
    </script>
</head>
<body>
    <div class="container-fluid py-4">
        <!-- 页面标题 -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h3 mb-1">
                            <i class="bi bi-arrow-repeat text-primary me-2"></i>
                            重定向管理器
                        </h1>
                        <p class="text-muted mb-0">管理外部资源的自动重定向规则</p>
                    </div>
                    <a href="/" class="btn btn-outline-secondary">
                        <i class="bi bi-house me-1"></i>返回首页
                    </a>
                </div>
            </div>
        </div>

        <!-- 统计信息卡片 -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="text-primary mb-2">
                            <i class="bi bi-gear-fill fs-2"></i>
                        </div>
                        <h5 class="card-title mb-1" id="total-rules">-</h5>
                        <p class="card-text text-muted small">总规则数</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="text-success mb-2">
                            <i class="bi bi-shield-check fs-2"></i>
                        </div>
                        <h5 class="card-title mb-1" id="builtin-rules">-</h5>
                        <p class="card-text text-muted small">内置规则</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="text-info mb-2">
                            <i class="bi bi-plus-circle-fill fs-2"></i>
                        </div>
                        <h5 class="card-title mb-1" id="custom-rules">-</h5>
                        <p class="card-text text-muted small">自定义规则</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="mb-2" id="status-icon">
                            <i class="bi bi-circle-fill fs-2"></i>
                        </div>
                        <h5 class="card-title mb-1" id="status-text">-</h5>
                        <p class="card-text text-muted small">服务状态</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- 功能选项卡 -->
        <div class="row">
            <div class="col-12">
                <ul class="nav nav-tabs" id="redirectTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="rules-tab" data-bs-toggle="tab" data-bs-target="#rules" type="button" role="tab">
                            <i class="bi bi-list-ul me-1"></i>重定向规则
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="add-rule-tab" data-bs-toggle="tab" data-bs-target="#add-rule" type="button" role="tab">
                            <i class="bi bi-plus-lg me-1"></i>添加规则
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="test-tab" data-bs-toggle="tab" data-bs-target="#test" type="button" role="tab">
                            <i class="bi bi-bug me-1"></i>测试重定向
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings" type="button" role="tab">
                            <i class="bi bi-gear me-1"></i>设置
                        </button>
                    </li>
                </ul>

                <div class="tab-content" id="redirectTabContent">
                    <!-- 重定向规则列表 -->
                    <div class="tab-pane fade show active" id="rules" role="tabpanel">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0">重定向规则列表</h6>
                                    <button class="btn btn-sm btn-outline-primary" onclick="loadRules()">
                                        <i class="bi bi-arrow-clockwise me-1"></i>刷新
                                    </button>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>规则名称</th>
                                                <th>匹配模式</th>
                                                <th>描述</th>
                                                <th>类型</th>
                                                <th>操作</th>
                                            </tr>
                                        </thead>
                                        <tbody id="rules-table-body">
                                            <tr>
                                                <td colspan="5" class="text-center text-muted py-4">
                                                    <i class="bi bi-hourglass-split me-2"></i>加载中...
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 添加规则 -->
                    <div class="tab-pane fade" id="add-rule" role="tabpanel">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white">
                                <h6 class="mb-0">添加自定义重定向规则</h6>
                            </div>
                            <div class="card-body">
                                <form id="add-rule-form">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="rule-name" class="form-label">规则名称 *</label>
                                            <input type="text" class="form-control" id="rule-name" required>
                                            <div class="form-text">唯一的规则标识符</div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label for="rule-description" class="form-label">描述</label>
                                            <input type="text" class="form-control" id="rule-description">
                                            <div class="form-text">规则的简要说明</div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="rule-pattern" class="form-label">匹配模式 (正则表达式) *</label>
                                        <input type="text" class="form-control" id="rule-pattern" required>
                                        <div class="form-text">例如: ^\/custom\/(.+)$</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="rule-redirect" class="form-label">重定向函数 *</label>
                                        <textarea class="form-control" id="rule-redirect" rows="3" required></textarea>
                                        <div class="form-text">例如: `/assets/custom/${match[1]}`</div>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-plus-lg me-1"></i>添加规则
                                        </button>
                                        <button type="reset" class="btn btn-outline-secondary">
                                            <i class="bi bi-arrow-clockwise me-1"></i>重置
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- 测试重定向 -->
                    <div class="tab-pane fade" id="test" role="tabpanel">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white">
                                <h6 class="mb-0">测试重定向规则</h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label for="test-path" class="form-label">测试路径</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="test-path" placeholder="/prod/pages/generated/components/prism-clike.min.js">
                                        <button class="btn btn-primary" type="button" onclick="testRedirect()">
                                            <i class="bi bi-play-fill me-1"></i>测试
                                        </button>
                                    </div>
                                </div>
                                <div id="test-result" class="d-none">
                                    <div class="alert alert-info">
                                        <h6 class="alert-heading">测试结果</h6>
                                        <div id="test-result-content"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 设置 -->
                    <div class="tab-pane fade" id="settings" role="tabpanel">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white">
                                <h6 class="mb-0">重定向设置</h6>
                            </div>
                            <div class="card-body">
                                <form id="settings-form">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="status-code" class="form-label">重定向状态码</label>
                                            <select class="form-select" id="status-code">
                                                <option value="301">301 - 永久重定向</option>
                                                <option value="302">302 - 临时重定向</option>
                                            </select>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <div class="form-check form-switch mt-4">
                                                <input class="form-check-input" type="checkbox" id="log-redirects">
                                                <label class="form-check-label" for="log-redirects">
                                                    记录重定向日志
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-check-lg me-1"></i>保存设置
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 删除确认模态框 -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">确认删除</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>确定要删除重定向规则 "<span id="delete-rule-name"></span>" 吗？</p>
                    <p class="text-muted small">此操作不可撤销。</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-danger" id="confirm-delete">删除</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentDeleteRule = null;
        
        // 页面加载完成后初始化
        document.addEventListener('DOMContentLoaded', async function() {
            try {
                await window.dependencyResourcesReady;
                console.log('依赖资源加载完成');
                
                // 初始化页面
                await loadStats();
                await loadRules();
                await loadSettings();
                
                // 绑定事件
                bindEvents();
            } catch (error) {
                console.error('页面初始化失败:', error);
            }
        });
        
        // 绑定事件
        function bindEvents() {
            // 添加规则表单
            document.getElementById('add-rule-form').addEventListener('submit', addRule);
            
            // 设置表单
            document.getElementById('settings-form').addEventListener('submit', saveSettings);
            
            // 删除确认
            document.getElementById('confirm-delete').addEventListener('click', confirmDelete);
        }
        
        // 加载统计信息
        async function loadStats() {
            try {
                const response = await fetch('/api/redirect/stats');
                const result = await response.json();
                
                if (result.success) {
                    const stats = result.data;
                    document.getElementById('total-rules').textContent = stats.totalRules;
                    document.getElementById('builtin-rules').textContent = stats.builtinRules;
                    document.getElementById('custom-rules').textContent = stats.customRules;
                    
                    const statusIcon = document.getElementById('status-icon');
                    const statusText = document.getElementById('status-text');
                    
                    if (stats.enabled) {
                        statusIcon.innerHTML = '<i class="bi bi-check-circle-fill fs-2 text-success"></i>';
                        statusText.textContent = '已启用';
                    } else {
                        statusIcon.innerHTML = '<i class="bi bi-x-circle-fill fs-2 text-danger"></i>';
                        statusText.textContent = '已禁用';
                    }
                }
            } catch (error) {
                console.error('加载统计信息失败:', error);
            }
        }
        
        // 加载规则列表
        async function loadRules() {
            try {
                const response = await fetch('/api/redirect/rules');
                const result = await response.json();
                
                if (result.success) {
                    const tbody = document.getElementById('rules-table-body');
                    tbody.innerHTML = '';
                    
                    result.data.rules.forEach(rule => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>
                                <strong>${rule.name}</strong>
                            </td>
                            <td>
                                <code class="small">${rule.pattern}</code>
                            </td>
                            <td>${rule.description || '-'}</td>
                            <td>
                                <span class="badge ${rule.isCustom ? 'bg-info' : 'bg-success'}">
                                    ${rule.isCustom ? '自定义' : '内置'}
                                </span>
                            </td>
                            <td>
                                ${rule.isCustom ? `
                                    <button class="btn btn-sm btn-outline-danger" onclick="deleteRule('${rule.name}')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                ` : '-'}
                            </td>
                        `;
                        tbody.appendChild(row);
                    });
                    
                    if (result.data.rules.length === 0) {
                        tbody.innerHTML = `
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    <i class="bi bi-inbox me-2"></i>暂无重定向规则
                                </td>
                            </tr>
                        `;
                    }
                    
                    // 更新统计信息
                    await loadStats();
                }
            } catch (error) {
                console.error('加载规则列表失败:', error);
            }
        }
        
        // 加载设置
        async function loadSettings() {
            try {
                const response = await fetch('/api/redirect/stats');
                const result = await response.json();
                
                if (result.success) {
                    const options = result.data.options;
                    document.getElementById('status-code').value = options.statusCode;
                    document.getElementById('log-redirects').checked = options.logRedirects;
                }
            } catch (error) {
                console.error('加载设置失败:', error);
            }
        }
        
        // 添加规则
        async function addRule(event) {
            event.preventDefault();
            
            const name = document.getElementById('rule-name').value;
            const pattern = document.getElementById('rule-pattern').value;
            const redirect = document.getElementById('rule-redirect').value;
            const description = document.getElementById('rule-description').value;
            
            try {
                const response = await fetch('/api/redirect/rules', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        name,
                        pattern,
                        redirect,
                        description
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('重定向规则添加成功！');
                    document.getElementById('add-rule-form').reset();
                    await loadRules();
                    
                    // 切换到规则列表选项卡
                    document.getElementById('rules-tab').click();
                } else {
                    alert('添加失败: ' + result.message);
                }
            } catch (error) {
                console.error('添加规则失败:', error);
                alert('添加失败: ' + error.message);
            }
        }
        
        // 删除规则
        function deleteRule(ruleName) {
            currentDeleteRule = ruleName;
            document.getElementById('delete-rule-name').textContent = ruleName;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
        
        // 确认删除
        async function confirmDelete() {
            if (!currentDeleteRule) return;
            
            try {
                const response = await fetch(`/api/redirect/rules/${currentDeleteRule}`, {
                    method: 'DELETE'
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('重定向规则删除成功！');
                    await loadRules();
                    bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                } else {
                    alert('删除失败: ' + result.message);
                }
            } catch (error) {
                console.error('删除规则失败:', error);
                alert('删除失败: ' + error.message);
            }
            
            currentDeleteRule = null;
        }
        
        // 测试重定向
        async function testRedirect() {
            const path = document.getElementById('test-path').value;
            
            if (!path) {
                alert('请输入测试路径');
                return;
            }
            
            try {
                const response = await fetch('/api/redirect/test', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ path })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    const resultDiv = document.getElementById('test-result');
                    const contentDiv = document.getElementById('test-result-content');
                    
                    if (result.data.hasRedirect) {
                        const info = result.data.redirectInfo;
                        contentDiv.innerHTML = `
                            <p><strong>原始路径:</strong> <code>${info.originalPath}</code></p>
                            <p><strong>重定向到:</strong> <code>${info.newPath}</code></p>
                            <p><strong>匹配规则:</strong> ${info.ruleName}</p>
                            <p><strong>规则描述:</strong> ${info.description}</p>
                            <p><strong>状态码:</strong> ${info.statusCode}</p>
                        `;
                        resultDiv.className = 'alert alert-success';
                    } else {
                        contentDiv.innerHTML = `
                            <p><strong>测试路径:</strong> <code>${result.data.originalPath}</code></p>
                            <p class="text-muted">没有匹配的重定向规则</p>
                        `;
                        resultDiv.className = 'alert alert-warning';
                    }
                    
                    resultDiv.classList.remove('d-none');
                } else {
                    alert('测试失败: ' + result.message);
                }
            } catch (error) {
                console.error('测试重定向失败:', error);
                alert('测试失败: ' + error.message);
            }
        }
        
        // 保存设置
        async function saveSettings(event) {
            event.preventDefault();
            
            const statusCode = parseInt(document.getElementById('status-code').value);
            const logRedirects = document.getElementById('log-redirects').checked;
            
            try {
                const response = await fetch('/api/redirect/options', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        statusCode,
                        logRedirects
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('设置保存成功！');
                } else {
                    alert('保存失败: ' + result.message);
                }
            } catch (error) {
                console.error('保存设置失败:', error);
                alert('保存失败: ' + error.message);
            }
        }
    </script>
</body>
</html>